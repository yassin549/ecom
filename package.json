{
  "name": "ecommerce-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma db push --skip-generate && next build",
    "vercel-build": "prisma generate && prisma db push --skip-generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:studio": "prisma studio",
    "analyze": "cross-env ANALYZE=true next build",
    "test:chrome": "start chrome http://localhost:3000",
    "test:firefox": "start firefox http://localhost:3000",
    "test:edge": "start msedge http://localhost:3000",
    "test:safari": "open -a Safari http://localhost:3000",
    "test:browsers": "npm-run-all -p test:chrome test:firefox test:edge",
    "lighthouse": "lighthouse http://localhost:3000 --view --output html --output-path ./lighthouse-report.html",
    "bundle:analyze": "npx @next/bundle-analyzer",
    "deploy:preview": "vercel",
    "deploy:prod": "vercel --prod"
  },
  
